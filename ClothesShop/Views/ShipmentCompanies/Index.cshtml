@model ClothesShop.Models.ShipmentCompanyViewModel
@using ClothesShop.Languages
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = ClothesShop.Languages.Resources.ShipmentCompanies;
}

@section scripts{
    @Scripts.Render("~/bundles/shipmentCompanies")
    <script>
    $(document).ready(function () {
        
        ShipmentCompaniesManager.Instance.Init({
                "grid_id": "#ShipmentCompaniesGrid",
                "grid_height": "calc(100vh - 200px)",
                "url": "@Url.Action("GetAll", "ShipmentCompanies")",
                "grid_captions": {
                    "name": "@Resources.FullName",
                    "mobileNumber": "@Resources.MobileNumber",
                    "address": "@Resources.Address",
               },
                "view_update": "@ClothesShop.Helpers.RolesHelper.CheckRoleRight("ShipmentCompanies", ClothesShop.Enums.RoleType.Edit)" == "True",
                "update_url": "@Url.Action("Edit", "ShipmentCompanies")/",
                "update_text": "<i class='dx dx-icon-edit'/> @Resources.Edit",

                "view_delete": "@ClothesShop.Helpers.RolesHelper.CheckRoleRight("ShipmentCompanies", ClothesShop.Enums.RoleType.Delete)" == "True",
                "delete_url": "@Url.Action("Delete", "ShipmentCompanies")",
                "delete_text": "<i class='dx dx-icon-trash'/> @Resources.Delete",

                "confirm_delete": "@Html.Raw(ClothesShop.Languages.Resources.AreYouSureDeleteShipmentCompany)",
                "confirm_title": "@Html.Raw(Resources.Delete)",
                "yes_text": "@Html.Raw(Resources.YesText)",
                "no_text": "@Html.Raw(Resources.NoText)",
                "success_delete": "@Html.Raw(Resources.DeletedSuccessfully)",
                "error_delete": "@Html.Raw(Resources.ErrorWhileDeleting)",
                "no_data": "@Resources.NoData",
                "page_info": "@Resources.PageInfo",
                "all_text": "@Resources.All"
            });
        });
    </script>
}
<div class="container-fluid">
    @if (ClothesShop.Helpers.RolesHelper.CheckRoleRight("ShipmentCompanies", ClothesShop.Enums.RoleType.Add))
    {
    <a href="@Url.Action("Create","ShipmentCompanies", new { area = "" })" class="btn btn-success mb-2">
        @Resources.AddShipmentCompany  <i class="dx dx-icon-add"></i>
    </a>
    }
    <div id="ShipmentCompaniesGrid">
    </div>
</div>
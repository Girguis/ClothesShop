@model IEnumerable<ClothesShop.Models.ColorViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = ClothesShop.Languages.Resources.Colors;
}
<div class="container tableContainer">
    @if (ClothesShop.Helpers.RolesHelper.CheckRoleRight("Colors",ClothesShop.Enums.RoleType.Add))
    {
        <p class="f-left">
            <a href="@Url.Action("Create","Colors", new { area = "" })" class="btn btn-lg btn-outline-success">
                <i class="fa fa-plus"></i> @ClothesShop.Languages.Resources.AddColor
            </a>
        </p>
    }

    <table id="ColorsGrid" class="table table-striped table-bordered table-hover table-responsive GeneralTable" width="100%" cellspacing="0">

        <thead>
            <tr class="theadData">
                <th class="width80" data-headerid="Name" data-dir="desc" onclick="TableManager.prototype.Sort(this);"><i class="fa fa-arrow-down searchArrow"></i> @Html.DisplayNameFor(model => model.Name)</th>
                <th class="width10">&nbsp;</th>
                <th class="width10">&nbsp;</th>
            </tr>
            <tr class="searchRow">
                <th class="width80 padding0">
                    <div class="searchInput">

                        <i class="fa fa-search"></i>
                        <input type="text" id="Name" value="" class="form-control setMaxWidth" placeholder="@ClothesShop.Languages.Resources.Search" />
                    </div>
                </th>
                <th class="width10">&nbsp;</th>
                <th class="width10">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
<div class="container text-center">
    <ul id="Pager" class="pagination-sm"></ul>
</div>
@section scripts{
    <script>
        var msg = "@Html.Raw(ClothesShop.Languages.Resources.AreYouSureDeleteColor)";
    function ConfirmDeleteColor(id) {
        var url = "@Url.Action("Delete","Colors")";
        var data = JSON.stringify({ id: id });
        CommonManager.prototype.ConfirmDelete(url, data);
        }
        var orderBy = {
            ColumnName: "Name",
            Direction: "desc",
        }
        var dataURL = "@Url.Action("GetAll","Colors")";
        var columns = [{ Name: "Name", Class: "width80" }, { Name: "EDIT", Class: "width10" }, { Name: "DELETE", Class: "width10" }];
        var searchColumns = [{ Name: "Name", Type: "input" }];
        var updateURL = "@Url.Action("Edit","Colors")/";
        var deleteURL = "ConfirmDeleteColor";
        var isUpdate = ("@ClothesShop.Helpers.RolesHelper.CheckRoleRight("Colors",ClothesShop.Enums.RoleType.Edit)" == "True");
        var isDelete = ("@ClothesShop.Helpers.RolesHelper.CheckRoleRight("Colors",ClothesShop.Enums.RoleType.Delete)" == "True");
        var gridId = "ColorsGrid";
        $(document).ready(function () {
            var tableManager = new TableManager();

            TableManager.prototype.Init();
        });
    </script>
    }
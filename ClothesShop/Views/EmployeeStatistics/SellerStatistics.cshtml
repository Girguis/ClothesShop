@model ClothesShop.Models.SingleSellerStaticticsViewModel
@using ClothesShop.Languages
@{
    ViewBag.Title = Resources.StatisticsDetails;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid dir-rtl col-md-8 offset-md-2">
    <div class="card m-0">
        <div class="card-body pt-2 m-0">
            <div class="col-md-12">
                <div class="col-md-4 mb-3 d-inline-block">
                    <div class="col-md-12">
                        <input hidden id="Date" />
                        <div id="DateID"></div>
                    </div>
                </div>
                <div class="col-md-2 mb-3 d-inline-block">
                    <div class="col-md-12">
                        <a href="#" id="preMonthBtn" type="button" class="btn btn-lg btn-primary">
                            <i class="dx dx-icon-arrowright"></i> @Resources.Previous
                        </a>
                    </div>
                </div>
                <div class="col-md-2 mb-3 d-inline-block">
                    <div class="col-md-12">
                        <a href="#" id="nextMonthBtn" type="button" class="btn btn-lg btn-primary">
                            @Resources.Next <i class="dx dx-icon-arrowleft"></i>
                        </a>
                    </div>
                </div>
                <div id="DataContainer">
                    @Html.Partial("_SellerStatistics", Model)
                </div>

            </div>
        </div>
    </div>
</div>



@section scripts{
    @Scripts.Render("~/bundles/singleSellerStatictics")
    <script>
        $(document).ready(function () {
            SingleSellerStatisticsManager.Instance.Init({
                "next_btn": "#nextMonthBtn",
                "pre_btn": "#preMonthBtn",
                "date": {
                    "div_id": "#DateID",
                    "id": "#Date",
                    "message": "@Resources.Date"
                },
                "url": "@Url.Action("GetSellerStatistics", "EmployeeStatistics")",
                "no_data": "@Resources.NoData",
                "seller_id": "@Model.SellerID"
            });
        });
    </script>
}


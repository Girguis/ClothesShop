                <th class="width20" data-headerid="EmployeeMobileNumber" data-dir="" onclick="TableManager.prototype.Sort(this);">
                    @ClothesShop.Languages.Resources.MobileNumber
                </th>
                <th class="width15" data-headerid="NumberOfOrders" data-dir="" onclick="TableManager.prototype.Sort(this);">
                    @ClothesShop.Languages.Resources.NumberOfOrders
                </th> 
                <th class="width15" data-headerid="TotalOrderCash" data-dir="" onclick="TableManager.prototype.Sort(this);">
                    @ClothesShop.Languages.Resources.TotalOrdersCash

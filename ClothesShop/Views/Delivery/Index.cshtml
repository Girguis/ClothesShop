@model ClothesShop.Models.OrderDeliveryViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = ClothesShop.Languages.Resources.OrdersDelivery;
}
<div class="container tableContainer">
    <table id="DeliveryGrid" class="table table-striped table-bordered dt-responsive nowrap GeneralTable" width="100%" cellspacing="0">
        <thead>
            <tr class="theadData">
                <th class="width20" data-headerid="EmployeeName" data-dir="desc" onclick="TableManager.prototype.Sort(this);">

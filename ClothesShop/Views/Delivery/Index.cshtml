                <th class="width10">&nbsp;</th>
                <th class="width10">&nbsp;</th>
                <th class="width10">&nbsp;</th>
            </tr>
            <tr class="searchRow">
                <th class="width20 padding0">
                    <div class="searchInput">
                        <i class="fa fa-search"></i>
                        <input type="text" id="EmployeeName" value="" class="form-control setMaxWidth" placeholder="@ClothesShop.Languages.Resources.Search" />
                    </div>
                </th>
                <th class="width20 padding0">
                    <div class="searchInput">
                        <i class="fa fa-search"></i>
                        <input type="text" id="EmployeeMobileNumber" value="" class="form-control setMaxWidth" placeholder="@ClothesShop.Languages.Resources.Search" />
                    </div>
                </th>
                <th class="width15" ></th>
                <th class="width15" ></th>
                <th class="width10">&nbsp;</th>
                <th class="width10">&nbsp;</th>
                <th class="width10">&nbsp;</th>
                <th class="width10">&nbsp;</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
<div class="container text-center">
    <ul id="Pager" class="pagination-sm"></ul>
</div>

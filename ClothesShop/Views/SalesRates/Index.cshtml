@model ClothesShop.Models.SalesRateViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = ClothesShop.Languages.Resources.SalesRate;
}
<div class="container tableContainer">
    @if (ClothesShop.Helpers.RolesHelper.CheckRoleRight("SalesRates", ClothesShop.Enums.RoleType.Add))
    {
        <p class="f-left">
            <a href="@Url.Action("Create", "SalesRates", new { area = "" })" class="btn btn-lg btn-outline-success">
                <i class="fa fa-plus"></i> @ClothesShop.Languages.Resources.Add
            </a>
        </p>
     }
    <table id="SalesRateGrid" class="table table-striped table-hover table-bordered table-responsive GeneralTable" width="100%" cellspacing="0">
        <thead>
            <tr class="theadData">
                <th class="width30"> @Html.DisplayNameFor(model => model.Name)</th>
                <th class="width25"> @Html.DisplayNameFor(model => model.From)</th>
                <th class="width25"> @Html.DisplayNameFor(model => model.To)</th>
                <th class="width10"></th>
                <th class="width10"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
<div class="container text-center">
    <ul id="Pager" class="pagination-sm"></ul>
</div>
@section scripts{
    <script>
        var msg = "@Html.Raw(ClothesShop.Languages.Resources.AreYouSureDeleteSalesRate)";
        function ConfirmDeleteSalesRate(id) {
            var url ='@Url.Action("Delete", "SalesRates")';
            var data = JSON.stringify({ id: id });
            CommonManager.prototype.ConfirmDelete(url, data);
        }

      var orderBy = {
            ColumnName: "ID",
            Direction: "desc",
        }
        isUpdate = "@ClothesShop.Helpers.RolesHelper.CheckRoleRight("SalesRates", ClothesShop.Enums.RoleType.Edit)" == "True";
        isDelete = "@ClothesShop.Helpers.RolesHelper.CheckRoleRight("SalesRates", ClothesShop.Enums.RoleType.Delete)" == "True";
        updateURL = "@Url.Action("Edit", "SalesRates")/";
        dataURL ='@Url.Action("GetAll", "SalesRates")';
        columns = [{ Name: "Name", Class: "width30" }, { Name: "From", Class: "width25" },
        { Name: "To", Class: "width25" }, { Name: "EDIT", Class: "10" }, { Name: "DELETE", Class: "10" }];
        searchColumns = [];
        deleteURL = "ConfirmDeleteSalesRate";
        gridId = "SalesRateGrid";
        $(document).ready(function () {
            var tableManager = new TableManager();
            TableManager.prototype.Init();
        })
    </script>
}
@model  List<ClothesShop.Areas.Settings.Models.JobRoleViewModel>
@using  ClothesShop.Languages
@{
    Layout = "~/Areas/Settings/Views/Shared/_Layout.cshtml";
    ViewBag.Title = ClothesShop.Languages.Resources.UpdateRights;
}
<div class="container-fluid dir-rtl col-md-8 offset-md-2">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="card m-0">
        <div class="card-header pb-0">
            <h4 class="m-0">@Resources.UpdateRights</h4>
        </div>
        <div class="card-body custom-card-body pt-2 m-0">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group col-xs-12">
                <table class="table table-responsive table-hover">

                    <thead>
                        <tr>
                            <th>@Resources.Name</th>
                            <th>@Resources.View</th>
                            <th>@Resources.Details</th>
                            <th>@Resources.Add</th>
                            <th>@Resources.Edit</th>
                            <th>@Resources.Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                @Html.HiddenFor(model => Model[i].ID)
                                @Html.HiddenFor(model => Model[i].RoleID)
                                @Html.HiddenFor(model => Model[i].JobTypeID)
                                <td>@Html.DisplayFor(model => Model[i].Name)</td>
                                <td>@Html.CheckBoxFor(moddel => Model[i].View)</td>
                                <td>@Html.CheckBoxFor(moddel => Model[i].Details)</td>
                                <td>@Html.CheckBoxFor(moddel => Model[i].Add)</td>
                                <td>@Html.CheckBoxFor(moddel => Model[i].Edit)</td>
                                <td>@Html.CheckBoxFor(moddel => Model[i].Delete)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-lg btn-success">
                 @Resources.Save
            </button>
        </div>
    </div>
    }
</div>
